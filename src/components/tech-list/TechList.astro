---
import TechItem from "./TechItem.astro";

type Props = {
  stack: Array<{
    name: string;
    image: ImageMetadata;
  }>;
  reverse?: boolean;
};

const { stack, reverse } = Astro.props;
---

<ul class={`flex ${reverse ? "flex-row-reverse" : ""}`}>
  {stack.map(({ name, image }) => <TechItem name={name} image={image} />)}
</ul>
