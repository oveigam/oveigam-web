---
import { Icon } from "astro-icon";

export interface Props {
  href: string;
  icon?: {
    pack: string;
    name: string;
  };
}

const { href, icon } = Astro.props;
---

<a
  class="flex items-center gap-1 text-2xl font-semibold text-gray-800 hover:text-vsc-500"
  href={href}
  target="_blank"
  rel="noreferrer"
>
  {icon && <Icon class="h-10 w-10" {...icon} />}
  <slot />
</a>
