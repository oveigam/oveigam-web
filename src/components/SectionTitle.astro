---
export interface Props {
  title: string;
  revert?: boolean;
}

const { title, revert = false } = Astro.props;
---

<div class={`mb-8 flex items-center gap-6 ${revert ? "flex-row-reverse" : ""}`}>
  <div class="h-px w-32 bg-gray-600"></div>
  <h2 class="whitespace-nowrap text-2xl font-bold uppercase">{title}</h2>
  <div class="h-px w-full bg-gray-600"></div>
</div>
