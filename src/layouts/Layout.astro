---
import "@fontsource/urbanist";

import Umami from "./../components/analytics/Umami.astro"

import thumbnail from "../assets/thumbnail.webp";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Óscar Veiga personal webpage" />
    <title>{title}</title>

    <meta property="og:url" content="https://www.oscarinadev.com/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Óscar Veiga Menéndez" />
    <meta property="og:description" content="Óscar Veiga personal webpage" />
    <meta property="og:image" content={thumbnail.src} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="oscarinadev.com" />
    <meta property="twitter:url" content="https://www.oscarinadev.com/" />
    <meta name="twitter:title" content="Óscar Veiga Menéndez" />
    <meta name="twitter:description" content="Óscar Veiga personal webpage" />
    <meta name="twitter:image" content={thumbnail.src} />

    {import.meta.env.PROD && <Umami client:idle />}
    
  </head>
  <body class="bg-slate-50">
    <slot />
  </body>
</html>
